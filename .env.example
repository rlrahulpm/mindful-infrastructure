# MySQL Configuration (using containerized MySQL)
# IMPORTANT: Set strong passwords for production!
MYSQL_ROOT_PASSWORD=your-strong-root-password
MYSQL_DATABASE=productdb

# For CRM Backend (uses root)
CRM_DATABASE_USERNAME=root
CRM_DATABASE_PASSWORD=your-strong-root-password

# For Product Backend (uses mindful user)
DATABASE_USERNAME=mindful
DATABASE_PASSWORD=your-strong-mindful-password

# JWT Configuration (shared across services)
# IMPORTANT: Generate a new secret key for production using: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=86400000

# Hibernate Configuration (for containerized database)
DDL_AUTO=update
SHOW_SQL=false

# Logging
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN
WEB_LOG_LEVEL=INFO